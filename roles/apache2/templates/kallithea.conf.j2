<VirtualHost *:80>
  ServerName {{ kallithea_server_name }}

  <Proxy *>
    Order allow,deny
    Allow from all
  </Proxy>

  ProxyPreserveHost On
  ProxyPass / http://127.0.0.1:5000/
  ProxyPassReverse / http://127.0.0.1:5000/

  #SetEnvIf X-Url-Scheme https HTTPS=1
</VirtualHost>
